            <Label Content="Start Date" HorizontalAlignment="Left" Margin="54,77,0,0" VerticalAlignment="Top" FontSize="18" Width="90"/>
            <Label Content="Start Time" HorizontalAlignment="Left" Margin="54,116,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.532,2.446" FontSize="18" Width="90"/>
            <DatePicker x:Name="dtpStartDatePicker" HorizontalAlignment="Left" Margin="169,87,0,0" VerticalAlignment="Top" Width="120"/>
